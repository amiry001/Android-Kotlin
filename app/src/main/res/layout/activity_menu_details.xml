<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rv_main"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".menu_details">


    <TextView
        android:id="@+id/textView48"
        android:layout_width="325dp"
        android:layout_height="105dp"
        android:background="#ECFADE"
        android:text="Istanbul to Eskisehir Trip delayed for 2 hours!"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button900" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/btne"
        android:text="Announcement             8/06/2022"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="409dp"
        android:layout_height="163dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button901"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btne"
        android:text="Announcement             5/06/2022"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />

    <TextView
        android:id="@+id/textView901"
        android:layout_width="325dp"
        android:layout_height="105dp"
        android:background="#ECFADE"
        android:text="Due to bad wheater Istanbul to Ankara trip is canceled!"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button901" />

    <TextView
        android:id="@+id/textView900"
        android:layout_width="325dp"
        android:layout_height="105dp"
        android:layout_marginTop="156dp"
        android:text="Istanbul to Adana Trip will be on next day!"
        android:textColor="@color/black"
        android:background="#ECFADE"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button900" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button900"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/btne"
        android:text="Announcement             6/06/2022"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />


</androidx.constraintlayout.widget.ConstraintLayout>